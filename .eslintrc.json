{
  "plugins": ["prettier", "@typescript-eslint"],
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "max-len": "off",
    "react-hooks/exhaustive-deps": "off",
    "no-empty": "warn",
    "no-unused-vars": "warn"
  }
}
